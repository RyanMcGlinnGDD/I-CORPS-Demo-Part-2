	"dialogue":[
		{
            "type": "dialogue",
            "speaker": 0,
            "statement": "At this point, I believe we can conclusively explain the murder of Gerard Little.",
            "action": [
                {
                    "type": "locationMarker",
                    "text": ""
                },
                {
                    "type": "actorAction",
                    "target": 0,
                    "expression": 0,
                    "active": true,
                    "position": -20
                },
                {
                    "type": "actorAction",
